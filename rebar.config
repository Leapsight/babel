{erl_opts, [debug_info]}.
{deps, [
    {utils,
        {git, "https://gitlab.com/leapsight/utils.git", {branch, "develop"}}
    },
    {leap,
        {git, "https://gitlab.com/leapsight/leap.git", {branch, "master"}}
    },
    {riakc,
        {git, "https://github.com/basho/riak-erlang-client.git", {tag, "3.0.7"}}
    },
    {riak_pool,
        {git, "https://gitlab.com/leapsight/riak_pool.git", {branch, "master"}}
    },
    {reliable,
        {git,
            "https://gitlab.com/leapsight/reliable.git",
            {tag, "0.3.3"}
        }
    },
    {jsone, "1.6.1"},
    {cache, "2.3.3"},
    gproc
]}.


{relx, [
    {release, {babel, "0.3.2"},[
        %% Erlang
        sasl,
        crypto,
        inets,
        tools,
        runtime_tools,
        os_mon,
        %% Third-parties
        cache,
        riakc,
        riak_pool,
        pooler,
        gproc,
        jsone,
        {reliable, load},
        backoff,
        utils,
        leap,
        babel
    ]},
    {dev_mode, false},
    {include_src, false},
    {include_erts, true},
    {extended_start_script, true},

    %% {overlay_vars, "config/prod/vars.config"},
    %% {vm_args, "config/prod/vm.args"},

    {overlay, []}
]}.

{profiles, [
    {dev, [
        {erl_opts, [debug_info, export_all, nowarn_export_all]},
        {relx, [
            {dev_mode, true},
            {include_src, false},
            {include_erts, false},
            {config, "config/sys.config"},
            {overlay, [
                {copy, "config/sys.config", "etc/sys.config"}
            ]}
        ]}
    ]},
    {lint,  [
        {plugins, [
            {rebar3_lint,
                {git,
                    "https://github.com/project-fifo/rebar3_lint.git",
                    {tag, "v0.1.10"}
                }
            }
        ]}
    ]},
    {docs, [
        {deps, [
            {edown,
                ".*",
                {git, "https://github.com/Leapsight/edown.git", {branch, "master"}}
            }
        ]},
        {edoc_opts, [
            {dir, "doc/modules"},
            {application, babel},
            {doclet, edown_doclet},
            %% {pretty_printer, erl_pp},
            {top_level_readme, {
                "./doc/modules/summary.md",
                "https://gitlab.com/leapsight/babel"
            }},
            %% Leapsight additions
            {function_index, false}
        ]}
    ]},
    {test, [
        {deps, [meck, proper]},
        {ct_opts, [
            {sys_config, ["config/test/sys.config"]}
        ]},
        {erl_opts, [debug_info, export_all, nowarn_export_all]},
        {relx, [
            {dev_mode, false},
            {include_src, false},
            {include_erts, true},
            {config, "config/test/sys.config"},
            {overlay, [
                {copy, "config/test/sys.config", "etc/sys.config"}
            ]}
        ]}
    ]}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [
        cache,
        riakc,
        jsone,
        utils,
        leap,
        riak_pool,
        {reliable, load},
        babel
    ]}
]}.


%% =============================================================================
%% PLUGINS
%% =============================================================================


{plugins, [rebar3_run, rebar3_proper]}.



%% =============================================================================
%% TESTING
%% =============================================================================


%% =============================================================================
%% QUALITY ASSURANCE TOOLS
%% =============================================================================

{dialyzer,
    [{warnings,
        [race_conditions,
            no_return,
            unmatched_returns,
            error_handling
        ]}
        %% , {plt_extra_apps, [utils]}
        %% {plt_apps, top_level_deps}
        %% {get_warnings, true},
        %% {plt_location, local}
        %% {base_plt_apps, [stdlib, kernel]},
        %% {base_plt_location, global}
    ]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.
%% {ct_opts, [
%%     {sys_config, ["config/sys.config"]}
%% ]}.



%% =============================================================================
%% LINTING
%% =============================================================================



{elvis,
 [#{dirs => ["src"],
       filter => "*.erl",
       rules => [
                 %% {elvis_style, line_length,
                 %%  #{ignore => [],
                 %%    limit => 80,
                 %%    skip_comments => false}},
                 {elvis_style, no_tabs},
                 {elvis_style, no_trailing_whitespace},
                 {elvis_style, macro_names, #{ignore => []}},
                 %% {elvis_style, macro_module_names},
                 {elvis_style, operator_spaces, #{rules => [{right, ","},
                                                            {right, "++"},
                                                            {left, "++"}]}},
                 %% {elvis_style, nesting_level, #{level => 3}},
                 {elvis_style, god_modules,
                  #{limit => 50,
                    ignore => []}},
                 {elvis_style, no_if_expression},
                 %% {elvis_style, invalid_dynamic_call, #{ignore => []}},
                 {elvis_style, used_ignored_variable},
                 {elvis_style, no_behavior_info},
                 {
                   elvis_style,
                   module_naming_convention,
                   #{regex => "^[a-z]([a-z0-9]*_?)*(_SUITE)?$",
                     ignore => []}
                 },
                 {
                   elvis_style,
                   function_naming_convention,
                   #{regex => "^([a-z][a-z0-9]*_?)*$"}
                 },
                 {elvis_style, state_record_and_type},
                 {elvis_style, no_spec_with_records}
                 %% {elvis_style, dont_repeat_yourself, #{min_complexity => 10}}
                 %% {elvis_style, no_debug_call, #{ignore => []}}
                ]
      },
     #{dirs => ["."],
       filter => "Makefile",
       rules => [{elvis_project, no_deps_master_erlang_mk, #{ignore => []}},
                 {elvis_project, protocol_for_deps_erlang_mk, #{ignore => []}}]
      },
     #{dirs => ["."],
       filter => "rebar.config",
       rules => [
            %% {elvis_project, no_deps_master_rebar, #{ignore => []}},
            %% {elvis_project, protocol_for_deps_rebar, #{ignore => []}}
        ]
      }
    ]
}.

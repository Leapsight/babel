{erl_opts, [debug_info]}.
{deps, [
    {utils,
        {git, "https://github.com/leapsight/utils.git", {tag, "1.3.7"}}
    },
    {leap,
        {git, "https://github.com/leapsight/leap.git", {branch, "master"}}
    },
    {riakc, {
        git,
        "https://github.com/basho/riak-erlang-client.git",
        {tag, "3.0.13"}
    }},
    {riak_pool,
        {git, "https://github.com/leapsight/riak_pool.git", {tag, "0.3.2"}}
    },
    {reliable,
        {git,
            "https://github.com/leapsight/reliable.git",
            {tag, "0.4.3"}
        }
    },
    {jsone, "1.8.0"},
    cache,
    gproc,
    telemetry
]}.


{relx, [
    {release, {babel, "0.4.6"},[
        %% Erlang
        sasl,
        crypto,
        inets,
        tools,
        runtime_tools,
        os_mon,
        %% Third-parties
        cache,
        riakc,
        riak_pool,
        pooler,
        gproc,
        jsone,
        telemetry,
        {reliable, load},
        backoff,
        utils,
        leap,
        babel
    ]},
    {dev_mode, false},
    {include_src, false},
    {include_erts, true},
    {extended_start_script, true},

    %% {overlay_vars, "config/prod/vars.config"},
    %% {vm_args, "config/prod/vm.args"},

    {overlay, []}
]}.

{profiles, [
    {dev, [
        {erl_opts, [debug_info, export_all, nowarn_export_all]},
        {relx, [
            {dev_mode, true},
            {include_src, false},
            {include_erts, false},
            {config, "config/sys.config"},
            {overlay, [
                {copy, "config/sys.config", "etc/sys.config"}
            ]}
        ]}
    ]},
    {lint,  [
        {plugins, [
            {rebar3_lint,
                {git,
                    "https://github.com/project-fifo/rebar3_lint.git",
                    {tag, "v0.1.10"}
                }
            }
        ]}
    ]},
    {docs, [
        {deps, [
        ]}
    ]},
    {test, [
        {deps, [
            meck, proper,
            {eqwalizer_support,
                {
                  git_subdir,
                  "https://github.com/whatsapp/eqwalizer.git",
                  {branch, "main"},
                  "eqwalizer_support"
                }
            }
        ]},
        {ct_opts, [
            {sys_config, ["config/test/sys.config"]}
        ]},
        {erl_opts, [debug_info, export_all, nowarn_export_all]},
        {relx, [
            {dev_mode, false},
            {include_src, false},
            {include_erts, true},
            {config, "config/test/sys.config"},
            {overlay, [
                {copy, "config/test/sys.config", "etc/sys.config"}
            ]}
        ]}
    ]}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [
        cache,
        riakc,
        jsone,
        utils,
        leap,
        riak_pool,
        {reliable, load},
        babel
    ]}
]}.


%% =============================================================================
%% PLUGINS
%% =============================================================================


{project_plugins, [
    rebar3_proper,
    rebar3_ex_doc,
    rebar3_hex,
    {eqwalizer_rebar3,
      {
        git_subdir,
        "https://github.com/whatsapp/eqwalizer.git",
        {branch, "main"},
        "eqwalizer_rebar3"
      }
    }
]}.

{hex, [
    {doc, #{provider => ex_doc}}
]}.

